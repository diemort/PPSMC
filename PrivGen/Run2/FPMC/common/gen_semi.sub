executable            = common/gen_semi.sh

requirements          = (OpSysAndVer =?= "CentOS7")
on_exit_remove        = (ExitBySignal == False) && (ExitCode == 0)
max_retries           = 5
requirements = Machine =!= LastRemoteHost
+JobFlavour           = "workday"
+JobBatchName         = "gen-$(JOBNAME)"

should_transfer_files = YES
transfer_input_files  = common/input.card,common/fpmc_lhe.f

output                = out/gen/$(PROCLABEL)-$(ClusterId).$(ProcId).out
error                 = err/gen/$(PROCLABEL)-$(ClusterId).$(ProcId).err
log                   = log/gen/$(PROCLABEL)-$(ClusterId).$(ProcId).log

arguments             = $(EOSROOT) $(EOSAREA) $(PROCLABEL) $(A0W) $(ACW) $(A1) $(A2) $(EVTS) $(ProcId) $(PID) $(ENERGY)
queue $(SPLIT)
